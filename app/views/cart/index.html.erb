      <section id="content">
        <div class="wrapper">
      
        <div id="container">
            <div id="myYield">
              
<h1>Your Cart</h1>

  	 Total products : <%= $cart.count %> 

      <!-- loop through each item and add to an array to get the overall total   -->
       <% if @myArray %>
      <% $cart.each  do | id, quantity |%>
         <% myItem = Item.find_by_id(id) %>
           <% @myArray.push( myItem.cost) %>
      <% end %>
   <% end %>
   <!-- check if array exists -->
   <% if @myArray %>
      <span class="goRight">The Grand Total: <span class="grandTotal"><%= number_to_currency(@myArray.sum, :unit => '€' )%></span></span>
  
   <% end %>

     
     
     
     
      <!-- i cant show grand total on this page as the object does not exist yet. cart/add and cart/remove hold all details -->
       <span class="goRight" style="padding: 10px;background: white">
         <!-- used a safe number to return to the remove page to show the subtotal and total details  -->
          <a href="/cart/remove/100000" />Display Details</a>
        </span>
  
 
 
  <table class="cartTable" border="0">
    <tr>
      <th>Item</th>
      <th>Image</th>
      <th>Quantity</th>
      <th>Cost</th>
      <th>Remove</th>
     
    </tr><!-- display the cart -->
      <% $cart.each  do | id, quantity |%>
      <% myItem = Item.find_by_id(id) %>
       <tr >
      <td style="padding: 10px"><%= link_to (myItem.name), myItem %></td>
      <td style="text-align:center;padding: 10px"><%= link_to (image_tag myItem.image, :style => "width:45%"), myItem %></td>
      <td style="text-align:center;">1</td>
      <td style="padding: 10px"> <%= number_to_currency(myItem.cost, :unit => '€' ) %> </td>
      <td style="width:50px;">
         <a style="float:right;" href="/cart/remove/<%= myItem.id %>"><%= image_tag("remove.png", :alt => "remove item", :style => "width:70%;") %></a>
        
         </td>
       
  </tr>
  <% end %>
  
  
    
</table>


     <a class="mybtn2" style="float:right;" href="/cart/clear">Clear Cart</a>
    </div>
    </div>
  </div>
</section>
  
