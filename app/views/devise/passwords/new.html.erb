 <section id="content">
   <div class="wrapper">
      
     <div id="container">
       <div id="myYield">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %> // email is not set up on this enviorment
  </div>
<% end %>

<%= render "devise/shared/links" %>
      </div>
      </div>
      </div>
  </section>