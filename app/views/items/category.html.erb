   <section id="content">
     <div class="wrapper">
          
         <div id="container">
          <div id="myYield">
          <p id="notice"><%= notice %></p>
          
          <!-- if admin --> 
          <p class="goRight">
           <% if session[:login] == 3 %>
        <%= link_to 'New Item', new_item_path %>
        <% end %>
        </p>
          <h1>Listing Items</h1>
          <div id="tableSurround">
          
              <% @items.each do |item| %>
               <div id="itemSurround">
                  <div class="porductName"><%= item.name %></div>
                  
                  <div >
                    <span class="theDis2"><%= item.description %></span><br>
                    
                  <span class="moveMe">Cost:</span> 
                  
                  <span class="theCost"><%=  number_to_currency(item.cost, :unit => 'â‚¬' ) %></span>
                  
                  </div>
                  <div class="theImage"><%= link_to (image_tag item.image, :style => "width:90%"), item %></div>
                  
                 <strong>Category:</strong><span class="theCat"><%= item.category %></span>
                  
                  <div class="theButtons">
                    
                 <span class="mybtn"><%= link_to 'Show', item %></span>
                 
                 <!-- Only show if admin -->
                 
                 
                 <!-- check admin -->
                 
                 <% if session[:login] == 3 %>
                 
                      <% if user_signed_in? %>
                        <span class="mybtn"><%= link_to 'Edit', edit_item_path(item) %></span>
                         <span class="mybtn"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></span>
                      <% else %>
                         
                       <% end %>
                 <% end %> 
                  
                  </div>
                </div>
              <% end %>
          
          </div>
        <br>
        
        </div>
      </div>
    </div>
  </section>
